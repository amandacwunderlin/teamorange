<!DOCTYPE html>
<!--<<<<<<<<< saved version -->
<html lang='en'>
<head>
  <style src="app/assets/stylesheets/simple.css"></style>
  <title>Meetr</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <%= link_to 'Meetr', root_path, class: 'navbar-brand' %>
    </div>
    <div id="navbar">
      <% if current_user %>
        <ul class="nav navbar-nav pull-right">
          <li><%= image_tag current_user.image_url, alt: current_user.name %></li>
          <li><%= link_to 'Log Out', logout_path, method: :delete %></li>
        </ul>
        <ul class="nav navbar-nav">
          <li><%= link_to 'Create a Meeting', new_meeting_path %></li>
          
        </ul>
      <% else %>
        <ul class="nav navbar-nav">
          <li><%= link_to 'Twitter', '/auth/twitter' %></li>
        </ul>
        
      <% end %>
      
      <ul class="nav navbar-nav">
        <li><%= link_to 'Google', '/redirect' %></li>
      </ul>
    </div>
    
  </div>
</nav>
<div class="container">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <%= value %>
    </div>
  <% end %>

</div>
<%= yield %>

</body>
