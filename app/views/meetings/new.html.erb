<body>

    <div class="container">
        <div class="text-center">
            <h1 class="bolder">MEETR</h1>
                <p class="lead", align = 'center'><i>Create Your Meetings Anytime, Anywhere</i></p>
            <br>
 <h2 class="leftalign bolder">Create a Meeting</h2>
    <form >
    <table class="textbox">
        <tr>
            <td>Meeting ID:</td>
            <td><input type="text" name="meetingId" required autofocus/></td>
        </tr>
        <tr>
            <td>Meeting Title</td>
            <td><input placeholder="Example:Tax Meeting" type="text" name="meetingTitle" required autofocus/></td>
        </tr>
        <tr>
            <td>Meeting Description:</td>
            <td><textarea placeholder="Example: Meeting with the group to discuss quarterly taxes" class="textboxlarge" type="text" name="meetingDesription" required></textarea></textarea></td>
        </tr>
        <tr>
            <td>Location:</td>
            <td><input placeholder="Example: Mankato, MN" type="text" name="meetingLocation" required/></td>
        </tr>
        <tr>
            <td>Date:</td>
            <td><input type="date" name="date" required/></td>
        </tr>
        <tr>
            <td>Meeting Type:</td>
            <td>
            <select name="state" required>
              <option value="Safety">Safety</option>
            	<option value="Info">Informative</option>
            	<option value="New Hire">New Hire</option>
            	<option value="Administrative">Admin</option>
            	<option value="Misc">Misc</option>
            </select>
            </td>
        </tr>
        <tr>
            <td>Admin Phone:</td>
            <td><input type="text" name="phone" required/></td>
        </tr>
        <tr>
            <td>Admin Email:</td>
            <td><input type="email" name="email" required/></td>
        </tr>
        <tr>
            <td>Preferred Contact:</td>
            <td>
                <label class="firstlabel"><input type="radio" name="contact" value="mail"/> Mail</label>
                <label><input type="radio" name="contact" value="phone"/> Phone</label>
                <label class="firstlabel"><input type="radio" name="contact" value="email"/> Email</label>
                <label><input type="radio" name="contact" value="any" checked/> Any</label>
            </td>
        </tr>
    </table>
    <input type="submit" value="Submit">
    <%= form_tag new_event_path do %>
    <%= submit_tag 'Add event' %>
    <% end %>
    </form>
                <br>
            <p style="font-size:75%;", align = "left"> </p>
            <br>
            <button type="button" onclick ="alert('Meeting Added!')">Add</button>
            <button type="button">Cancel</button>
                <br>
                <br>
            <button type="button">Invite Members</button>
        </div>
    </div>

    <script type='text/javascript' src="//ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
    <script type='text/javascript' src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>

    <%= form_for @meeting do |f| %>
      Start Date: <%= f.text_field :startdate %><br />
      End Date : <%= f.text_field :enddate %><br />
      location : <%= f.text_field :location %><br />
      Summary : <%= f.text_area :summary %><br />
      <%= f.submit %>
    <% end %>
    
    
</body>
